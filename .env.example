# Environment Variables
# Copy this file to .env.local and fill in your values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/companyprofile?schema=public"

# NextAuth (for authentication)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-a-random-string"

# Carbonio Mail Configuration
CARBONIO_HOST="mail.yourcompany.com"
CARBONIO_PORT="587"
CARBONIO_USERNAME="noreply@yourcompany.com"
CARBONIO_PASSWORD="your-mail-password"
CARBONIO_SECURE="true"
MAIL_FROM="noreply@yourcompany.com"
CONTACT_EMAIL="contact@yourcompany.com"

# Gmail SMTP Configuration (Alternative)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="Zexfro <your-email@gmail.com>"

# Application Settings
NEXT_PUBLIC_APP_NAME="Company Profile"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
